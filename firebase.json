{
  "functions": [
    {
      "source": "apps/api",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "*.local"
      ],
      "predeploy": [
        "npm run format",
        "cd packages/types && npm install && npm run build",
        "cd apps/api && npm install && npm run build"
      ],
      "postdeploy": ["rm -rf apps/api/lib", "rm -rf packages/types/dist"]
    }
  ]
}
